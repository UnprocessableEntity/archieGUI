<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgstatus"
    android:contentDescription="@string/src2"
    android:paddingLeft="60dp"
    android:paddingTop="60dp"
    android:paddingRight="60dp"
    android:paddingBottom="60dp"
    tools:context=".archieStatus">

    <LinearLayout
        android:id="@+id/bckId"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="60dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:contentDescription="@string/bck"
            app:srcCompat="@drawable/icons8_home_64" />

        <TextView
            android:id="@+id/homeText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:letterSpacing="1"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:text="@string/bck"
            android:textAlignment="center"
            android:textSize="12sp"
            tools:textAllCaps="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bckId">

        <ImageView
            android:id="@+id/statusArchieImg"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:layout_marginTop="120dp"
            android:contentDescription="@string/ArchieStatus"
            app:srcCompat="@drawable/btns" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:layout_marginTop="9"
            android:letterSpacing="2"
            android:text="@string/archieStatusTxt"
            android:textAlignment="center"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/weatherArchieImg"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:layout_marginTop="60dp"
            android:onClick="goWeather"
            app:srcCompat="@drawable/btnw" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9"
            android:letterSpacing="2"
            android:text="@string/archieWeather"
            android:textAlignment="center"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>